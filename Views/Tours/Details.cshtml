@model TourismApp.Models.TourPackage
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = Model.Title;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>@Model.Title</h2>
                    <small class="text-muted">by @Model.AgencyProfile.AgencyName</small>
                </div>
                <div class="card-body">
                    <p class="card-text">@Model.Description</p>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong><i class="fas fa-calendar-day me-1"></i>Duration:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.DurationDays day@(Model.DurationDays != 1 ? "s" : "")
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong><i class="fas fa-dollar-sign me-1"></i>Price:</strong>
                        </div>
                        <div class="col-sm-9">
                            <span class="h4 text-primary">$@Model.Price</span> per person
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong><i class="fas fa-users me-1"></i>Group Limit:</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.GroupSizeLimit people maximum
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            @if (User.IsInRole("Tourist"))
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="fas fa-ticket-alt me-2"></i>Quick Actions</h5>
                    </div>
                    <div class="card-body text-center">
                        <a asp-controller="Bookings" asp-action="Index" class="btn btn-outline-primary mb-2 w-100">
                            <i class="fas fa-list me-2"></i>My Bookings
                        </a>
                        <a asp-controller="Feedbacks" asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-star me-2"></i>My Reviews
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
    
    <!-- Booking Messages -->
    @if (TempData["Msg"] is string ok)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@ok
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] is string err)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@err
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Available Dates -->
    <div class="card mt-4">
        <div class="card-header">
            <h4 class="mb-0"><i class="fas fa-calendar-check me-2"></i>Available Dates</h4>
        </div>
        <div class="card-body">
            @if (!Model.TourDates.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-calendar-times fa-2x mb-3"></i>
                    <p class="mb-0">No dates scheduled yet. Check back later!</p>
                </div>
            }
            else
            {
                <div class="row">
                    @foreach (var d in Model.TourDates.OrderBy(x => x.Date))
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card border-primary">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h6 class="card-title mb-1">
                                                <i class="fas fa-calendar me-1"></i>@d.Date.ToString("MMMM dd, yyyy")
                                            </h6>
                                            <small class="text-muted">@d.Date.ToString("dddd")</small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-info">@d.Capacity spots</span>
                                        </div>
                                    </div>
                                    
                                    @if (User.IsInRole("Tourist"))
                                    {
                                        <form asp-controller="Bookings" asp-action="Create" method="post" class="d-flex gap-2">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="tourDateId" value="@d.Id" />
                                            <input type="number" name="participants" class="form-control form-control-sm" 
                                                   placeholder="How many?" min="1" max="@d.Capacity" required />
                                            <button type="submit" class="btn btn-primary btn-sm">
                                                <i class="fas fa-ticket-alt me-1"></i>Book Now
                                            </button>
                                        </form>
                                        <small class="text-muted mt-1 d-block">
                                            Total cost: $@Model.Price Ã— participants
                                        </small>
                                    }
                                    else if (!User.Identity.IsAuthenticated)
                                    {
                                        <div class="text-center">
                                            <a href="/Identity/Account/Login" class="btn btn-outline-primary btn-sm">
                                                Login to Book
                                            </a>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
