@model IEnumerable<TourismApp.Controllers.ReportSummaryRow>
@{
  ViewData["Title"] = "Reports";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-chart-line me-2"></i>Booking Reports</h2>
    <div>
        <a asp-action="Index" class="btn btn-primary active">Summary Report</a>
        <a asp-action="Detailed" class="btn btn-outline-primary">Detailed Report</a>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Summary by Package & Status</h5>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th><i class="fas fa-map-marked-alt me-1"></i>Package</th>
                        <th><i class="fas fa-info-circle me-1"></i>Status</th>
                        <th><i class="fas fa-calendar-check me-1"></i># Bookings</th>
                        <th><i class="fas fa-users me-1"></i>Participants</th>
                        <th><i class="fas fa-dollar-sign me-1"></i>Revenue (Paid)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>
                            <td>
                                <div class="fw-bold">@r.PackageTitle</div>
                            </td>
                            <td>
                                @{
                                    var badgeClass = r.Status switch
                                    {
                                        "Pending" => "bg-warning",
                                        "Confirmed" => "bg-info",
                                        "Completed" => "bg-success",
                                        "Cancelled" => "bg-secondary",
                                        _ => "bg-light text-dark"
                                    };
                                }
                                <span class="badge @badgeClass">@r.Status</span>
                            </td>
                            <td><span class="badge bg-primary">@r.Bookings</span></td>
                            <td><span class="badge bg-info">@r.Participants</span></td>
                            <td><strong class="text-success">$@r.Revenue.ToString("N2")</strong></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        
        @if (!Model.Any())
        {
            <div class="text-center py-4">
                <i class="fas fa-chart-line fa-3x text-muted mb-3"></i>
                <h5 class="text-muted">No booking data available</h5>
                <p class="text-muted">Start creating tour packages to see booking reports.</p>
            </div>
        }
    </div>
</div>
